@model IEnumerable<CT2_CNW_DoAnChanGaGoiNem.Models.SANPHAM>

@{
    Layout = null;
    ViewBag.Title = "Pro";
}
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div style="font-size:12px;" class="table-responsive table--no-card m-b-30">
                    <table class="table table-borderless table-striped">
                        <thead style="background:#1d1c1c;color:#c8c8c8;">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TENSANPHAM)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MALOAI)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MATHUONGHIEU)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GIAGOC)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HINHMINHHOA)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NGAYTAO)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MOI)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GIAM)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GIABAN)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(model=>model.NGAYTAO))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TENSANPHAM)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LOAI.TENLOAI)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.THUONGHIEU.TENTHUONGHIEU)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GIAGOC)
                                    </td>
                                    <td>
                                        <img style="width: 100px; height:100px;" src="@Url.Content("~/Content/img/products/" + item.HINHMINHHOA)" />
                                    </td>
                                    <td>

                                        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.NGAYTAO))
                                    </td>
                                    <td>
                                        @if (item.MOI == 1) {
                                            <span>Sp Mới</span>
                                        }
                                        else {
                                            <span>Không</span>
                                        }
                                    </td>
                                    <td>
                                        <span>@(item.GIAM * 100) %</span>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GIABAN)
                                    </td>
                                    <td>
                                        <a class="btn btn-default btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "Admin", new { masp = @item.MASANPHAM})')">Edit</a>
                                        <a class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
